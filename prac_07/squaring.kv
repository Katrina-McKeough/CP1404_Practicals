BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 35
            multiline: False
        Button:
            text: 'Square'
            font_size: 19
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(float(input_number.text))
        Label:
            id: output_label
            font_size: 35
            color: (1, 0.7, 0.7, 1)
    Label:
        text: 'Enter a number and press "Square"'
        font_size: 12
        color: (1, 1, 1, 1)