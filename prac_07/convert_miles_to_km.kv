BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            text: ''
            font_size: 80
            id: input_miles
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.3, 1)
            Button:
                text: 'Up'
                font_size: 30
            Button:
                text: 'Down'
                font_size: 30
    Button:
        text: 'Convert m to km'
        font_size: 50
        on_press: app.handle_calculate(float(input_miles.text))
#       Ask Lindsay: acceptable to convert text to float here? Or define a separate method to do that?
    Label:
        text: ''
        font_size: 80
        id: output_km
