BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            text: '0'
            font_size: 80
            id: input_miles
            on_text: app.handle_calculate(input_miles.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.3, 1)
            Button:
                text: 'Up'
                font_size: 30
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 30
                on_press: app.handle_increment(-1)
#    Button:
#        text: 'Convert m to km'
#        font_size: 50
#        on_press: app.handle_calculate(input_miles.text)
    Label:
        text: app.output_text
        font_size: 80
        color: (1, 1, 0, 1)
        id: output_km
